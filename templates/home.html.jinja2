                //https://dev.to/arc__coder/real-time-javascript-clock-2dn0 heavy inspired by this example

        var d = new Date();
                var hrs = d.getHours();
                var min = d.getMinutes();
                var secs = d.getSeconds();
                if (min<10){
                    min = "0" + min;
                }
                if (secs<10){
                    secs = "0" + secs;
                }

